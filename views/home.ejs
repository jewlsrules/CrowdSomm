<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('./partials/header.ejs') %>
  </head>
  <body>
    <%- include ('./partials/nav.ejs') %>
    <div class="container1">
      <div class="subheader-container">
        <div class='subheader'>
          <h4>CrowdSomm collects reviews of individual dishes and drinks from your favorite restaurants to help others decide what to order.</h4>
        </div>
      </div>
      <form action="/search" method="POST">
        <h2>Find a Restaurant:</h2>
        <div class="form-input-container">
          <div class="form-group">
            <label for="restaurant_name">Name:</label>
            <div class="input-1">
              <input type="text" class="form-control" name="restaurant_name" /><br>
            </div>
          </div>
          <div class="form-group">
            <label for="restaurant_location">Zip or City, State:</label>
            <div class="input-1">
              <input type="text" class="form-control" name="restaurant_location" /><br>
            </div>
          </div>
          <input type="submit" value="SEARCH">
        </div>
      </form>
      <br>
      <% if(businesses){ %>
        <div class='business-results-container'>
        <% for(let i=0; i < businesses.length; i++){ %>
          <div class="business-result">
            <h3><a href='/restaurants/<%=businesses[i].id%>'><%=businesses[i].name%></a></h3><p><%=businesses[i].location.address1%></p>
          </div>
        <% } %>
        </div>
      <% } else { %>
        <div class="popular-container">
          <div class="popular-header">
            <h1>Popular Restaurants</h1>
          </div>
          <div class='business-results-container'>
            <div class="business-result">
              <h3><a href='/restaurants/90Kr1hSW3Vku9g4yfQIBgQ'>Kessler's Sports Bar</a></h3><p>1703 E Olive Way</p>
            </div>
            <div class="business-result">
              <h3><a href='/restaurants/KWR8Qb-43BZv016WlpnQ9w'>Feierabend</a></h3><p>422 Yale Ave N</p>
            </div>
            <div class="business-result">
              <h3><a href='/restaurants/pq9CH9VxSaLZUqqpb8GNzw'>Shannon's on Pine</a></h3><p>209 Pine Ave</p>
            </div>
          </div>
        </div>
      <% } %>

    </div>
    <%- include ('./partials/footer.ejs') %>
    <script>
    //Modal Popup Controller
      function toggle_visibility(){
          var e = document.getElementById('popup');
          var f = document.getElementById('popup-signup');
        if(f.style.display == 'block'){
          e.style.display = 'block';
          f.style.display = 'none';
        } else if(e.style.display == 'block'){
            e.style.display = 'none';
        } else {
            e.style.display = 'block';
          }
      }

      //Modal Popup Controller
        function toggle_signup(){
          var e = document.getElementById('popup-signup');
          var f = document.getElementById('popup');
          if(f.style.display == 'block'){
            e.style.display = 'block';
            f.style.display = 'none';
          }
          else if(e.style.display == 'block'){
            e.style.display = 'none';
          } else {
            e.style.display = 'block';
          }
        }
    </script>
  </body>
</html>
